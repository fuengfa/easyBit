<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EnterPinActivity">

    <com.hanks.passcodeview.PasscodeView
            android:id="@+id/passCodeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6E46D5"
            app:correctStateColor="#00C52F"
            app:wrongStateColor="#B31212"
            app:numberTextColor="#5E5E5E"
            android:autofillHints="1234"
            >


    </com.hanks.passcodeview.PasscodeView>
</RelativeLayout>