<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_marginTop="5dp"
        android:background="#F5F0F0"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

   <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
      <LinearLayout
              android:background="@drawable/corner"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
         <androidx.viewpager.widget.ViewPager
                 android:id="@+id/viewpager"
                 android:layout_width="match_parent"
                 android:layout_height="200dp">
         </androidx.viewpager.widget.ViewPager>

         <TextView
                 android:layout_marginTop="5dp"
                 android:background="#BEF4511E"
                 android:padding="3dp"
                 android:textSize="22dp"
                 android:gravity="center"
                 android:textColor="#F2FFFFFF"
                 android:text="iPhone XR"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>
         <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

         </LinearLayout>
      </LinearLayout>
      <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
         <LinearLayout
                 android:gravity="center"
                 android:id="@+id/highScore"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
            <TextView
                    android:background="#FFFFFF"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="จะหมดเวลาประมูลในอีก"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#F2F80303"
                    android:background="#FFFFFF"
                    android:id="@+id/time"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="05 : 59 "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:padding="5dp"
                    android:textColor="#BFF4511E"
                    android:textSize="50dp"
                    android:id="@+id/hightBit"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20,000฿"/>
         </LinearLayout>
         <LinearLayout
                 android:id="@+id/listBit"
                 android:padding="20dp"
                 android:background="@drawable/corner"
                 android:layout_below="@+id/highScore"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
               <ImageView
                       android:src="@drawable/ic_face_black_24dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"/>
               <TextView
                       android:id="@+id/username"
                       android:textSize="18dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="10dp"
                       android:text="Jame Smit"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:padding="5dp"
                    android:background="@drawable/corner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

               <TextView
                       android:textSize="18dp"
                       android:id="@+id/money"
                       android:layout_marginLeft="5dp"
                       android:text="20,000$ "
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

            </LinearLayout>

         </LinearLayout>

         <LinearLayout
                 android:gravity="center"
                 android:layout_below="@+id/listBit"
                 android:layout_marginTop="5dp"
                 android:orientation="vertical"
                 android:layout_above="@+id/linearbutton"

                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
            <Button
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:textColor="#969393"
                    android:background="#FFFFFF"
                    android:text="View Product Detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

         </LinearLayout>


         <LinearLayout
                 android:background="@drawable/corner"
                 android:layout_marginTop="2dp"
                 android:layout_alignParentBottom="true"
                 android:id="@+id/linearbutton"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp"
                 >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
               <View
                       android:layout_width="0dp"
                       android:layout_height="fill_parent"
                       android:layout_weight="1"
                       />
               <Button
                       android:background="@drawable/circle_shape"
                       android:id="@+id/bit1"
                       android:textSize="25dp"
                       android:textColor="#F2FFFFFF"
                       android:text="+50฿"
                       android:layout_width="96dp"
                       android:layout_height="96dp"/>
               <View
                       android:layout_width="0dp"
                       android:layout_height="fill_parent"
                       android:layout_weight="1"
                       />

               <Button
                       android:background="@drawable/circle_shape"
                       android:id="@+id/bit2"
                       android:textSize="25dp"
                       android:textColor="#F2FFFFFF"
                       android:text="+100฿"
                       android:layout_width="96dp"
                       android:layout_height="96dp"/>

               <View
                       android:layout_width="0dp"
                       android:layout_height="fill_parent"
                       android:layout_weight="1"
                       />

               <Button
                       android:background="@drawable/circle_shape"
                       android:id="@+id/bit3"
                       android:textSize="25dp"
                       android:textColor="#F2FFFFFF"
                       android:text="+1,000฿"
                       android:layout_width="96dp"
                       android:layout_height="96dp"/>
               <View
                       android:layout_width="0dp"
                       android:layout_height="fill_parent"
                       android:layout_weight="1"
                       />
            </LinearLayout>
         </LinearLayout>


      </RelativeLayout>
   </LinearLayout>

</RelativeLayout>