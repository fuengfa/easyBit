<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/cornerline"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img1"
                    android:padding="10dp"
                    android:src="@drawable/p2"
                    android:layout_width="205dp"
                    android:layout_height="200dp"/>

            <TextView
                    android:gravity="center"
                    android:text="iphone XR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/timer"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:textColor="#F2F80303"
                        android:id="@+id/hour"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text=" : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"

                        android:id="@+id/minute"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="39"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"
                        android:background="#00FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text=" : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"
                        android:id="@+id/second"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="20dp"
                        android:text="20,000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="20dp"
                        android:text="฿"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:background="@drawable/cornerline"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img2"
                    android:padding="10dp"
                    android:src="@drawable/p2"
                    android:layout_width="205dp"
                    android:layout_height="200dp"/>

            <TextView
                    android:gravity="center"
                    android:text="iphone XR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/timer2"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:textColor="#F2F80303"
                        android:id="@+id/hour2"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text=" : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"

                        android:id="@+id/minute2"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="39"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"
                        android:background="#00FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text=" : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="#F2F80303"
                        android:id="@+id/second2"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="20dp"
                        android:text="20,000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="20dp"
                        android:text="฿"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
