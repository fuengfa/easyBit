<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserActivity">

    <View
            android:alpha="0.6"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/img2"/>

        <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    >

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImg"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/petch"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/name"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="120dp"
                                android:textSize="20sp"
                                android:text="น้องเต่า"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                    android:layout_marginTop="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                    </LinearLayout>
                                    <LinearLayout
                                            android:padding="15dp"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        <RelativeLayout
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                            <TextView

                                                    android:textColor="#2B2A2A"
                                                    android:textSize="18sp"
                                                    android:text="ยอดเงินคงเหลือ : "
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"/>

                                            <ImageView
                                                    android:id="@+id/addMoney"
                                                    android:layout_alignParentRight="true"
                                                    android:src="@drawable/ic_add_black_24dp"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"/>
                                        </RelativeLayout>

                                        <TextView
                                                android:layout_marginTop="15dp"
                                                android:textSize="18sp"
                                                android:gravity="right"
                                                android:text="15,000 บาท"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                <androidx.cardview.widget.CardView
                                        android:id="@+id/auctionMenu"
                                        android:elevation="0dp"
                                        android:layout_marginVertical="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <LinearLayout
                                            android:paddingVertical="5dp"
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        <ImageView
                                                android:src="@drawable/auction"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"/>

                                        <TextView
                                                android:textColor="#6D6D6D"
                                                android:textSize="18sp"
                                                android:layout_marginHorizontal="15dp"
                                                android:layout_gravity="center_vertical"
                                                android:text="สำหรับผู้ขาย"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>


                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                        android:elevation="0dp"
                                        android:id="@+id/historyMenu"
                                        android:layout_marginVertical="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <LinearLayout
                                            android:paddingVertical="5dp"
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        <ImageView
                                                android:src="@drawable/shoppinghistory"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"/>

                                        <TextView
                                                android:textColor="#6D6D6D"
                                                android:textSize="18sp"
                                                android:layout_marginHorizontal="15dp"
                                                android:layout_gravity="center_vertical"
                                                android:text="ประวัติการใช้งาน"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>


                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                        android:elevation="0dp"
                                        android:id="@+id/settingMenu"
                                        android:layout_marginVertical="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <LinearLayout
                                            android:paddingVertical="5dp"
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        <ImageView
                                                android:src="@drawable/customerbehavior"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"/>

                                        <TextView
                                                android:textColor="#6D6D6D"
                                                android:textSize="18sp"
                                                android:layout_marginHorizontal="15dp"
                                                android:layout_gravity="center_vertical"
                                                android:text="ข้อมูลส่วนตัว"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                        android:elevation="0dp"
                                        android:id="@+id/withDrawMenu"
                                        android:layout_marginVertical="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <LinearLayout
                                            android:paddingVertical="5dp"
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                        <ImageView
                                                android:src="@drawable/withdraw"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"/>

                                        <TextView
                                                android:textColor="#6D6D6D"
                                                android:textSize="18sp"
                                                android:layout_marginHorizontal="15dp"
                                                android:layout_gravity="center_vertical"
                                                android:text="ถอนเงิน"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>



</RelativeLayout>